.config-area
  .success-area
    - if flash[:notice]
      %p
        = flash[:notice]
  .btn-area
    - if current_user?(@user)
      .edit-btn
        = link_to '編集', edit_user_path
      .delete-btn
        = link_to '退会する', "/users/#{@user.name}/delete_user"

.contents
  .avatar-area
    = image_tag @user.avatar, :size  => "100x100" 
  .displayname-area
    = @user.display_name
  .uid-area
    = "@#{@user.name}"
  .profile-area
    = @user.profile
#show-area
  .flash-area
    - if flash[:notice]
      = flash[:notice]

  .user-info-area
    .info-area
      .avatar-area
        = image_tag @user.avatar
      .display_name-area
        = @user.display_name
        %br
      .username-area
        = "@#{@user.name}"
        %br
      .profile-area
        = @user.profile
  .btn-area
    - if current_user?(@user)
      = link_to '編集', edit_user_path, class: 'link-text'
      = link_to '退会', delete_user_path, class: 'link-text'
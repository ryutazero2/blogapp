.flash-area
  - if flash[:alert]
    = flash[:alert]

  - if flash[:notice]
    = flash[:notice]
.form-area
  %h1 ログイン
  = form_with url: login_path , local:true do |form|
    .input 
      .name
        = form.label :ユーザ名
        = form.text_field :name
      .pass
        = form.label :パスワード
        = form.password_field :password
      = form.submit 'Login', class: 'login-btn' 